{
    "manifest_version": 3,
    "name": "My Extension",
    "version": "1.0",
    "description": "Description of your extension",
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "icons": {
      "48": "icon.png",
      "128": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/watch?v=*"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    }
  }